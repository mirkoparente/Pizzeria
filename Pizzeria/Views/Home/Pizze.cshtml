@model IEnumerable<Pizzeria.Models.Articoli>

@{
    ViewBag.Title = "Pizze";
}

<h2 class="text-center my-3">Le Nostre Pizze</h2>

    <section class="container section-preview mt-5">

        <!-- Grid row -->
        <div class="row row-cols-3 mx-1">

@foreach (Pizzeria.Models.Articoli a in Model)
{<!-- Grid column -->
            <div class="col mb-4">

                <!-- Card -->
                <div class="card h-100" style="max-width: 22rem;">

                    <!-- Card image -->
                    <div class="view overlay h-100">
                        <img class="card-img-top position-relative h-100"  src="~/Content/img/@a.Foto" alt="Card image cap">
                        <a>
                            <div class="mask rgba-white-slight waves-effect waves-light"></div>
                        </a>
                    </div>

                    <!-- Button -->
                    <div class="d-flex justify-content-end my-2 ">

                    <a class="btn btn-danger rounded-pill position-absolute topp end-0" href="@Url.Action("DettaglioPizza", "Home", new {id=a.IdArticoli})"><i class="bi bi-chevron-right w-25 pl-1"></i></a>
                    </div>

                    <!-- Card content -->
                    <div class="card-body mt-3">

                        <!-- Title -->
                        <h4 class="card-title">@a.Nome</h4>
                        <hr />
                        <!-- Text -->
                        <p class="card-text">@Html.DisplayFor(modelItem=>a.Prezzo)</p>
                       

                    </div>

                    <!-- Card footer -->
                </div>
                <!-- Card -->

            </div>
            <!-- Grid column -->
}
        </div>
        <!-- Grid row -->
    </section>

























  