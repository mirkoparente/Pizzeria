@model Pizzeria.Models.Articoli

@{
    ViewBag.Title = "ModificaArticolo";
}




@using (Html.BeginForm("ModificaArticolo", "Articoli", FormMethod.Post, new { @enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()

    <!-- Container for demo purpose -->
    <div class="container my-5">

        <!-- Section: Design block -->
        <section class="mb-10">
            <div class="row">
                <div class="col-md-9 col-lg-7 col-xl-5 mx-auto text-center">
                    <h4 class="mb-4">Modifica pizza</h4>

                    <div class="row">
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                        @Html.HiddenFor(m=>m.IdArticoli)
                        <div class="col-md-6">
                            <div class="form-outline mb-4">
                                @Html.EditorFor(model => model.Nome, new { htmlAttributes = new { @class = "form-control", placeholder = "Nome Pizza" } })
                                @Html.ValidationMessageFor(model => model.Nome, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-outline mb-4">
                                @Html.EditorFor(model => model.Prezzo, new { htmlAttributes = new { @class = "form-control", placeholder = "Prezzo" } })
                                @Html.ValidationMessageFor(model => model.Prezzo, "", new { @class = "text-danger" })
                            </div>
                        </div>


                        <div class="col-md-6">
                            <div class="form-outline mb-4">
                                @Html.EditorFor(model => model.TempoConsegna, new { htmlAttributes = new { @class = "form-control", placeholder = "Tempo Preparazione" } })
                                @Html.ValidationMessageFor(model => model.TempoConsegna, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-outline mb-4">
                                @Html.EditorFor(model => model.Foto, new { htmlAttributes = new { @class = "form-control", type = "file" } })
                                @Html.ValidationMessageFor(model => model.Foto, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="col-12 mw-100">
                            <div class="form-outline mb-4">
                                @Html.EditorFor(model => model.Ingredienti, new { htmlAttributes = new { @class = "form-control", placeholder = "Ingredienti" } })
                                @Html.ValidationMessageFor(model => model.Ingredienti, "", new { @class = "text-danger" })
                            </div>
                        </div>
                    </div>

                    <button type="submit" class="btn btn-outline-danger btn-block">Modifica pizza</button>

                </div>
            </div>
        </section>
        <!-- Section: Design block -->

    </div>
    <!-- Container for demo purpose -->

}


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
